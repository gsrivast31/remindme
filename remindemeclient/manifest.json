{
    "manifest_version": 2,
    "name": "RemindMe",
    "description": "Create email reminders in seconds",
    "version": "0.2",
    "background": {
        "scripts": ["public/js/event.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "index.html"
    },
    "permissions": [
        "tabs", 
        "http://*/*", 
        "https://*/*"
    ]
}